							"raw": "{{base_url}}/api/courses",
							"host": ["{{base_url}}"],
							"path": ["api", "courses"]
						}
					}
				},
				{
					"name": "Buscar Curso por ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/courses/1",
							"host": ["{{base_url}}"],
							"path": ["api", "courses", "1"]
						}
					}
				}
			]
		},
		{
			"name": "Feedbacks",
